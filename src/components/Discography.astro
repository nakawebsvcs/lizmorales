---
// Import images
import image1 from '../assets/pexels-record.jpg';
import image2 from '../assets/ahumanu.jpg';
import image3 from '../assets/pexels-record.jpg';
---

<!-- ============================================ -->
<!--                  Gallery                     -->
<!-- ============================================ -->

<section id="gallery-1716">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">Music</span>
      <h2 class="cs-title">Discography</h2>
      <p class="cs-text">Aqestic recusandae laudantium optio amet a quisquam saepe aliquid, voluptate praesentium dicta fuga dolor error.</p>
    </div>
    <div class="cs-gallery">
      <picture class="cs-picture">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset={image1.src}>
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset={image1.src}>
        <img loading="lazy" decoding="async" src={image1.src} alt="Album cover" width="480" height="549">
      </picture>
      <picture class="cs-picture">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset={image2.src}>
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset={image2.src}>
        <img loading="lazy" decoding="async" src={image2.src} alt="Album cover" width="480" height="549">
      </picture>
      <picture class="cs-picture">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset={image3.src}>
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset={image3.src}>
        <img loading="lazy" decoding="async" src={image3.src} alt="Album cover" width="480" height="549">
      </picture>
    </div>
  </div>
</section>

 
<style lang="less">
/*-- -------------------------- -->
<--- Gallery -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
  #gallery-1716 {
    padding: var(--sectionPadding);
    position: relative;
    z-index: 1;
    overflow: hidden;
    background-color: var(--secondary);

    .cs-container {
      width: 100%;
      max-width: (1280/16rem);
      margin: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      /* 48px - 64px */
      gap: clamp(3rem, 6vw, 4rem);
    }

    .cs-content {
      /* center text */
      text-align: center;
      width: 100%;
      max-width: (800/16rem);
      display: flex;
      flex-direction: column;
      /* centers content horizontally */
      align-items: center;
    }

    .cs-title {
      font-family: 'Rock Salt', cursive;
      color: var(--primary);
    }

    .cs-text {
      color: var(--primary);
      margin-bottom: (16/16rem);
      
      &:last-of-type {
        /* 32px - 64px */
        margin-bottom: clamp(2rem, 7vw, 4rem);
      }
    }

    .cs-gallery {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(12, 1fr);
    }

    .cs-picture {
      width: 100%;
      /* changes at tablet */
      height: 100vw;
      max-height: (400/16rem);
      display: block;
      position: relative;
      z-index: 1;
      grid-column: span 4;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
      }
    }

    /* Add the overlay as a pseudo-element to the section */
    &:before {
      content: '';
      width: 100%;
      height: 33%; /* Set to 1/3 of the section height */
      background-color: var(--primary);
      opacity: 0.1;
      position: absolute;
      bottom: 0;
      left: 0;
      z-index: 0; /* Make sure it's behind the content but visible */
    }
  }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
  #gallery-1716 {
    .cs-container {
      flex-direction: column;
      align-items: center;
    }

    .cs-content {
      max-width: (800/16rem);
      /* add some space between content and gallery */
      margin-bottom: (32/16rem);
    }

    .cs-gallery {
      height: auto;
      width: 100%;
      max-width: (1200/16rem);
    }

    .cs-picture {
      height: 100%;
      max-height: 100%;
      /* 280px - 420px */
      min-height: clamp(17.5rem, 37vw, 26.25rem);
    }

    /* Adjust the overlay for tablet */
    &:before {
      height: 33%; /* Maintain 1/3 of the section height */
    }
  }
}

</style>
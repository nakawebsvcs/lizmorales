---
// Import images
import image1 from '../assets/Ahumanu-gathering.jpeg';
import image2 from '../assets/ahumanu-songbird.jpeg';
import image3 from '../assets/ahumanu-no-kuuipo.jpg';
import image4 from '../assets/ahumanu.jpg';
import image5 from '../assets/Ka-pilina-na-wahi-pana.jpeg';
---

<!-- ============================================ -->
<!--                  Gallery                     -->
<!-- ============================================ -->

<section id="gallery-1716">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">Music</span>
      <h2 class="cs-title">Discography</h2>
      <p class="cs-text">Liz Morales has been a vibrant force in Hawaiian music for many years. As a founding member of the acclaimed trio Ahumanu, she helped shape the group's soulful sound and deep cultural resonance. Today, she continues to influence the local music scene as the producer of the dynamic group Ka Pilina. Check back for upcoming solo releases that blend traditional Hawaiian roots with her unique creative voice.</p>
    </div>
    <div class="cs-gallery">
      <picture class="cs-picture">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset={image1.src}>
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset={image1.src}>
        <img loading="lazy" decoding="async" src={image1.src} alt="Album cover" width="480" height="549">
      </picture>
      <picture class="cs-picture">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset={image2.src}>
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset={image2.src}>
        <img loading="lazy" decoding="async" src={image2.src} alt="Album cover" width="480" height="549">
      </picture>
      <picture class="cs-picture">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset={image3.src}>
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset={image3.src}>
        <img loading="lazy" decoding="async" src={image3.src} alt="Album cover" width="480" height="549">
      </picture>
       <picture class="cs-picture">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset={image4.src}>
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset={image4.src}>
        <img loading="lazy" decoding="async" src={image4.src} alt="Album cover" width="480" height="549">
      </picture>
       <picture class="cs-picture">
        <!--Mobile Image-->
        <source media="(max-width: 600px)" srcset={image5.src}>
        <!--Tablet and above Image-->
        <source media="(min-width: 601px)" srcset={image5.src}>
        <img loading="lazy" decoding="async" src={image5.src} alt="Album cover" width="480" height="549">
      </picture>
    </div>
  </div>
</section>
 
<style lang="less">
/*-- -------------------------- -->
<--- Gallery -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
  #gallery-1716 {
    padding: var(--sectionPadding);
    position: relative;
    z-index: 1;
    overflow: hidden;
    background-color: var(--secondary);

    .cs-container {
      width: 100%;
      max-width: (1280/16rem);
      margin: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      /* 48px - 64px */
      gap: clamp(3rem, 6vw, 4rem);
    }

    .cs-content {
      /* center text */
      text-align: center;
      width: 100%;
      max-width: (800/16rem);
      display: flex;
      flex-direction: column;
      /* centers content horizontally */
      align-items: center;
    }

    .cs-title {
      font-family: 'Allura', cursive;
      color: var(--primary);
    }

    .cs-text {
      color: var(--primary);
      margin-bottom: (16/16rem);
      
      &:last-of-type {
        /* 32px - 64px */
        margin-bottom: clamp(2rem, 7vw, 4rem);
      }
    }

    .cs-gallery {
      width: 100%;
      display: flex;
      flex-wrap: wrap;
      justify-content: center; /* This centers all items and incomplete rows */
      gap: 1.5rem;
    }

    .cs-picture {
      width: 100%;
      max-width: (300/16rem); /* Limit max width on mobile */
      aspect-ratio: 1; /* Perfect square for album covers */
      display: block;
      position: relative;
      cursor: pointer; /* Hint at clickability */
      transition: all 0.3s ease;
      border-radius: 8px; /* Subtle rounded corners */
      overflow: hidden; /* Ensure image respects border radius */
      
      /* Soft glow effect */
      box-shadow: 
        0 4px 15px rgba(255, 255, 255, 0.1),
        0 2px 8px rgba(255, 255, 255, 0.05);

      img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Maintains aspect ratio while filling container */
        object-position: center; /* Centers the image within the container */
        display: block;
        transition: transform 0.3s ease;
      }

      /* Hover effects */
      &:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 
          0 12px 30px rgba(255, 255, 255, 0.15),
          0 6px 20px rgba(255, 255, 255, 0.1),
          0 0 25px rgba(255, 255, 255, 0.08);
        
        img {
          transform: scale(1.05);
        }
      }

      /* Active/focus states for accessibility */
      &:focus,
      &:active {
        outline: 2px solid rgba(255, 255, 255, 0.3);
        outline-offset: 4px;
      }
    }

    /* Add the overlay as a pseudo-element to the section */
    &:before {
      content: '';
      width: 100%;
      height: 33%; /* Set to 1/3 of the section height */
      background-color: var(--primary);
      opacity: 0.1;
      position: absolute;
      bottom: 0;
      left: 0;
      z-index: 0; /* Make sure it's behind the content but visible */
    }
  }
}

/* Small Tablet - 600px */
@media only screen and (min-width: 37.5rem) {
  #gallery-1716 {
    .cs-gallery {
      gap: 2rem;
    }

    .cs-picture {
      width: calc(50% - 1rem); /* Two items per row with gap */
      max-width: (250/16rem);
    }
  }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
  #gallery-1716 {
    .cs-container {
      flex-direction: column;
      align-items: center;
    }

    .cs-content {
      max-width: (800/16rem);
      /* add some space between content and gallery */
      margin-bottom: (32/16rem);
    }

    .cs-gallery {
      gap: 2rem;
    }

    .cs-picture {
      width: calc(33.333% - 1.33rem); /* Three items per row with gap */
      max-width: (220/16rem);
      
      /* Enhanced hover effect on larger screens */
      &:hover {
        transform: translateY(-12px) scale(1.03);
      }
    }

    /* Adjust the overlay for tablet */
    &:before {
      height: 33%; /* Maintain 1/3 of the section height */
    }
  }
}

/* Desktop - 1024px */
@media only screen and (min-width: 64rem) {
  #gallery-1716 {
    .cs-gallery {
      gap: 2.5rem;
    }

    .cs-picture {
      width: calc(33.333% - 1.67rem); /* Three items per row with larger gap */
      max-width: (280/16rem);
      
      /* More pronounced hover effect on desktop */
      &:hover {
        transform: translateY(-15px) scale(1.04);
      }
    }
  }
}

/* Reduce motion for users who prefer it */
@media (prefers-reduced-motion: reduce) {
  #gallery-1716 {
    .cs-picture {
      transition: none;
      
      img {
        transition: none;
      }
      
      &:hover {
        transform: none;
        
        img {
          transform: none;
        }
      }
    }
  }
}
</style>

